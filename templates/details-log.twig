<!DOCTYPE html>
<html>
    {% include "head.twig" %}
    <body>
        <div class="default-background">
            {% include 'nav.twig' %}

            <p style="margin: 20px">
                <a href="/project/{{id}}{% if token %}?token={{ token }}{% endif %}">‚Üê terug naar project</a>
            </p>

            {% include "details-header.twig" with {'tab': 'updates'} %}

            <section class="sheet">
                <h2>Log</h2>
                {% for event in events | reverse %}
                    <p>
                        <i>{{ event.timestamp }}</i> {{ event.action }} <b>{{ event.property }}</b> {% if event.value %}{{ event.value }}{% else %}<i>geen waarde</i>{% endif %}
                    </p>
                {% endfor %}
            </section>
        </div>
        {% include "footer.twig" %}
    </body>
</html>